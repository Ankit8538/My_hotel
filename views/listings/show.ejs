<% layout('/layouts/boilerplate.ejs') %>
<body>
    <div class="row mt-3">
         <div class="col-8 offset-3 ">
    <h3> <%= specal.title %></h3>
    </div>
    <div class="card col-6 offset-3 show-card listing-card">
        <img src="<%=specal.image.url%>" class="card-img-top show-img" alt="listings">
  <div class="card-body">
    <p class="card-text">
        <h4 class="card-text color"><b><i>Owned by:-<%= specal.owner.username %></i></b></h4>
             <br>
      <p class="card-text"> <%= specal.description %></p><br>
      <p class="card-text"> &#8377;<%=  specal.price.toLocaleString("en-IN")%></p><br>
       <p class="card-text"><%= specal.location %></p><br>
      <p class="card-text"> <%= specal.country%></p><br>
    </p>
  </div>
    </div>
    <br>
    
   
</div>
 
<div class="btns">
    <a href="/listings/<%=specal._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
    
<form method="post" action="/listings/<%=specal._id%>?_method=Delete">
    <button class="btn btn-dark offset-5 ">Delete</button>
</form>
</div>

 
<hr>

<div class="col-8 offset-3 mb-3">
    
<h3 >Leave a Review</h3>
<form action="/listings/<%=specal._id %>/reviews" method="post" novalidate class="needs-validation">
    <!-- <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
    </div> -->
    <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
    <fieldset class="starability-slot">
        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
      </div>
      
    <div class="mb-3 mt-3">
        <label for="Comment" class="form-label">Comments</label>
        <textarea name="review[Comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
        <div class="invalid-feedback">please enter own review</div>
        </div>
    
    <button class="btn btn-outline-dark">Submit</button>
</form>

<script src="/js/script.js"></script>
<hr>
<p><b>All reviews</b></p>


<% for(let i=0;i<specal.reviews.length;i++) { %>
    <div class="row">
    <div class="card col-5 ms-3 mb-3">
        <div class="card-body bor" >
     
            <h5 class="card-title"><%=specal.owner.username%></h5>
     <p class="starability-result" data-rating="<%= specal.reviews[i].rating  %>">
    
     </p>

     <p class="card-text"><%= specal.reviews[i].Comment %></p>
  
     <form class="mb-3" method="post" action="/listings/<%=specal._id%>/reviews/<%= specal.reviews[i]._id%>?_method=DELETE">
        <button class="btn btn-sm btn-dark">Delete</button>
        </form>
    </div>
    
    </div>
    </div>
<% } %>
</div>

    
</body>
