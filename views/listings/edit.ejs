<% layout('/layouts/boilerplate.ejs') %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br>
    <h3>Edit your Listings</h3>

    <form method="post" action="/listings/<%= editacc._id %>/update/?_method=PUT" novalidate  class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="title" type="text" value="<%=editacc.title%>" class="form-control" required>
            <div class="invalid-feedback">please enter the title</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
        <textarea name="description" type="text" class="form-control" required><%=editacc.description %></textarea>
        </div>
        <div class="mb-3">
            <img src="<%= editacc.image.url %>" alt="ankii" width="200px" class="edit">
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload new Image</label>
        <input name="image" type="file" class="form-control">
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
            <input name="price" type="number" value="<%= editacc.price %>"  class="form-control" required>
            <div class="invalid-feedback">please enter the price</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="country" type="text" value="<%= editacc.country %>" class="form-control" required></div>
                <div class="invalid-feedback">please enter the country</div>
        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
        <input name="location" type="text" value="<%= editacc.location %>" class="form-control" required>
        <div class="invalid-feedback">please enter the location</div>
        </div>
        <br>
        <button class="btn btn-dark edit-btn mt-3">edit data</button>
        <br>
        <br>
    </form>
    </div>
</div>

<script src="/js/script.js"></script>
    
</body>
</html>